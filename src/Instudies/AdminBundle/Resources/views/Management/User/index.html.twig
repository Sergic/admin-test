{% set title = 'Управление пользователями' %}

{% extends 'InstudiesAdminBundle:Shared:base.html.twig' %}

{% block content %}

	<div id="manage-user">

		<header class="page-header">
			<h2>{{ title }}</h2>
		</header>


	    <form action="{{ path('admin_management_user_edit') }}" class="well" method="post" {{ form_enctype(findForm) }} class="user-search">
			<fieldset>
	        {{ form_widget(findForm) }}
            <button class="btn btn-success" type="submit">найти</button>
		    </fieldset>
	    </form>

		{% if userForm is defined %}

			<form class="manage-user">
				<fieldset>
					<dl>
						<dt>Имя:</dt>
						<dd><input type="text" class="span4"></dd>
					</dl>
					<dl>
						<dt>Фамилия:</dt>
						<dd><input type="text" class="span4"></dd>
					</dl>
					<dl>
						<dt>Email:</dt>
						<dd><input type="email" class="span4"></dd>
					</dl>
					<dl>
						<dt>Email активирован:</dt>
						<dd><input type="checkbox"></dd>
					</dl>
					<dl>
						<dt>информация заполнена:</dt>
						<dd><input type="checkbox"></dd>
					</dl>
					<dl>
						<dt>Пароль:</dt>
						<dd><input type="text" class="span4"></dd>
					</dl>
					<button class="btn btn-success">сохранить</button>
					<button class="btn btn-danger">удалить</button>
				</fieldset>
			</form>

		{% endif %}

	</div>

{% endblock %}