{% block field_row %}
{% spaceless %}
<dl class="control-group{{ (0 < form_errors(form)|length)? ' error':'' }}">
    <dt>{{ label|trans }}:</dt>
    {{ form_widget(form) }}
    {{ form_errors(form) }}
</dl>
{% endspaceless %}
{% endblock field_row %}

{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="help-inline">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}